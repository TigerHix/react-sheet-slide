{
    "name": "react-sheet-slide",
    "version": "1.5.0",
    "description": "A responsive React draggable sheet and dialog component",
    "scripts": {
      "package": "pnpm -C packages/react-sheet-slide package",
      "build": "pnpm -C packages/react-sheet-slide build",
      "test": "pnpm -C packages/react-sheet-slide test",
      "test:coverage": "pnpm -C packages/react-sheet-slide test:coverage",
      "clean": "pnpm -C packages/react-sheet-slide clean && pnpm -C packages/website clean",
      "dev": "pnpm -C packages/website dev",
      "build-site": "pnpm -C packages/website build",
      "e2e-test": "pnpm -C packages/website test",
      "e2e-test:ci": "pnpm -C packages/website test:ci",
      "format": "prettier --write \"packages/**/{src,tests}/**/*.js\""
    },
    "repository": "https://github.com/woofers/react-sheet-slide",
    "author": "Jaxson Van Doorn",
    "license": "MIT",
    "homepage": "https://jaxs.onl/react-sheet-slide/",
    "keywords": [
        "sheet",
        "bottom-sheet",
        "drawer",
        "uikit",
        "draggableview",
        "popup",
        "react",
        "modal",
        "animation",
        "dialog",
        "backdrop",
        "component",
        "react-dom",
        "react-spring",
        "react-use-gesture"
      ]
  }